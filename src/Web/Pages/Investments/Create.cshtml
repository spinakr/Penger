@page "{portfolioId=kofoed}"
@model Investments.Create
@{
    ViewData["Title"] = "Create Investment";
}

<div>
    <h1>Create Investment </h1>

    <form method="post" up-target=".investment-list:before" up-layer="root">
        <h3>Portfolio: @Model.Data.PortfolioId</h3>
        @Html.HiddenFor(x => x.Data.PortfolioId)
        <div>
            <input asp-for="Data.InvestmentId" type="text" placeholder="Investment name / id" />
        </div>
        <div>
            <input asp-for="Data.Symbol" type="text" placeholder="Symbol" />
            <select asp-for="Data.Currency">
                <option value="NOK" selected>NOK</option>
                <option value="USD">USD</option>
                <option value="EUR">EUR</option>
            </select>
        </div>
        <div>
            <select asp-for="Data.InvestmentGroup" asp-items="Model.InvestmentGroupOptions">
                <option value="" selected>Investement group</option>
            </select>
        </div>
        <div>
            <select asp-for="Data.InvestmentType" asp-items="Model.InvestmentTypeOptions">
                <option value="" selected>Investement type</option>
            </select>
        </div>
        <br />
        <div>
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-page="/Investments/Index">Back</a>
        </div>
    </form>
</div>