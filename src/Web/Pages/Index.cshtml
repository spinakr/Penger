@page "{portfolioId=kofoed}"
@using System.Globalization
@model Web.Pages.Index
@{
    ViewData["Title"] = "Index";
}

<div>
    <h1>Portfolio - @Model.Data.PortfolioId</h1>
    <p class="big-number">@Model.Data.TotalValue</p>
    <table>
        <tr>
            <th>
                Name
            </th>
            <th>
                Amount
            </th>
            <th>
                Price
            </th>
            <th>
                Value
            </th>
        </tr>
        @foreach (var item in Model.Data.InvestmentCounts)
        {
            <tr>
                <td>
                    @item.Key
                </td>
                <td>
                    @Math.Round(@item.Value,2)
                </td>
                <td>
                    @Model.Data.CurrentInvestmentPrices[item.Key].Value.ToString("C", new CultureInfo("no-NO"))
                </td>
                <td>
                    @Model.Data.InvestmentValues[item.Key].ToString("C", new CultureInfo("no-NO"))
                </td>

            </tr>
        }
    </table>
</div>